<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sectionscontaitner">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAE5D3"
    tools:context=".pdfs.MainActivity"
    >


    <Button
        android:id="@+id/math"
        android:layout_width="212sp"
        android:layout_height="80sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:background="@drawable/buttons"
        android:text="علمي رياضه"
        android:textSize="30sp"
        android:textStyle="bold"

        />

    <Button
        android:id="@+id/science"
        android:layout_width="212sp"
        android:layout_height="80sp"
        android:layout_below="@id/math"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190sp"
        android:background="@drawable/buttons"
        android:text="علمي علوم"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/adaby"
        android:layout_width="212sp"
        android:layout_height="80sp"
        android:layout_below="@id/science"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:background="@drawable/buttons"
        android:text="أدبي"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>
</FrameLayout>