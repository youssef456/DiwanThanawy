<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAE5D3    "
        android:orientation="vertical">

        <!-- Numbers category -->
        <Button
            android:id="@+id/ARABIC"
            android:layout_width="212sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:layout_margin="40sp"
            android:background="@drawable/buttons"
            android:text="عربي"
            android:textSize="30sp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/phalspha"
            android:layout_width="212sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:layout_margin="40sp"
            android:background="@drawable/buttons"
            android:text="فلسفه و منطق"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@id/ARABIC"/>


        <Button
            android:id="@+id/soch"
            android:layout_width="212sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:layout_margin="40sp"
            android:background="@drawable/buttons"
            android:text="علم نفس و اجتماع"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@id/phalspha"/>

        <Button
            android:id="@+id/English"
            android:layout_width="212sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:layout_margin="40sp"
            android:background="@drawable/buttons"
            android:text="english"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@id/soch"/>

        <Button
            android:id="@+id/FRANCE"
            android:layout_width="212sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:layout_margin="40sp"
            android:background="@drawable/buttons"
            android:text="france"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@id/English"/>



        <Button
            android:id="@+id/history"
            android:layout_width="212sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:layout_margin="40sp"
            android:background="@drawable/buttons"
            android:text="التاريخ"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@id/FRANCE"/>

        <Button
            android:id="@+id/gogh"
            android:layout_width="212sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:layout_margin="40sp"
            android:background="@drawable/buttons"
            android:text="جفرافيا"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@id/history"/>



    </LinearLayout>
</ScrollView>

</FrameLayout>