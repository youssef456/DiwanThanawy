<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="#FAE5D3    "
        android:orientation="vertical">

        <!-- Numbers category -->
        <Button
            android:id="@+id/ARABIC"
            android:layout_width="212sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:layout_margin="40sp"
            android:background="@drawable/buttons"
            android:text="عربي"
            android:textSize="30sp"
            android:textStyle="bold"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ARABIC"
            android:layout_marginBottom="60sp"
            android:id="@+id/relphysics">
            <Button
                android:id="@+id/PHYSICSARAB"
                android:layout_width="171sp"
                android:layout_height="55sp"

                android:layout_marginTop="40sp"
                android:background="@drawable/buttons"
                android:text="فزياء عربي"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginRight="180sp"
                />
            <Button
                android:id="@+id/PHYSICS"
                android:layout_width="171sp"
                android:layout_height="55sp"
                android:layout_marginTop="40sp"
                android:layout_gravity="right"
                android:layout_marginLeft="180sp"
                android:layout_alignParentRight="true"
                android:background="@drawable/buttons"
                android:text="PHYSICS"
                android:textSize="20sp"
                android:textStyle="bold"

                />
</RelativeLayout>


        <Button
            android:id="@+id/lamy"
            android:layout_width="212sp"
            android:layout_height="110sp"
            android:layout_gravity="center"
            android:layout_margin="40sp"
            android:background="@drawable/buttons"
            android:text="بوكليت لامي  مجاب في الرياضيات"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@id/relphysics"
            />

        <Button
            android:id="@+id/CHEMISTRY"
            android:layout_width="212sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:layout_margin="40sp"
            android:background="@drawable/buttons"
            android:text="Chemistry"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@id/lamy"/>

        <Button
            android:id="@+id/English"
            android:layout_width="212sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:layout_margin="40sp"
            android:background="@drawable/buttons"
            android:text="English"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@id/CHEMISTRY"/>


        <Button
            android:id="@+id/FRANCE"
            android:layout_width="212sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:layout_margin="40sp"
            android:background="@drawable/buttons"
            android:text="France"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@id/English"/>

        <Button
            android:id="@+id/STATICS"
            android:layout_width="212sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:layout_margin="40sp"
            android:background="@drawable/buttons"
            android:text="Statics"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@id/FRANCE"/>

        <Button
            android:id="@+id/DYNAMICS"
            android:layout_width="212sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:layout_margin="40sp"
            android:background="@drawable/buttons"
            android:text="Dynamics"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@id/STATICS"/>

        <Button
            android:id="@+id/ALGEBRA"
            android:layout_width="212sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:layout_margin="40sp"
            android:background="@drawable/buttons"
            android:text="Algebra and solid"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@id/DYNAMICS"/>

        <Button
            android:id="@+id/CALCLUS"
            android:layout_width="212sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:layout_margin="40sp"
            android:background="@drawable/buttons"
            android:text="Calclus"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@id/ALGEBRA"/>


    </LinearLayout>
</ScrollView>
</FrameLayout>